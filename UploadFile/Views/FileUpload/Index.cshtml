@model  UploadFile.Models.ImageModel

<form method="post" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload Image</p>
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Upload file"/>
    </div>
    <div class="form-group">
        <span>@TempData["msg"]</span>
    </div>
   
</form>
<div>
    @if(Model != null){
        @foreach( var item in Model.DominantColors)
        {
            <div style="display:block; float:left; background-color:@item.Key;color:white;fonr-weight:bold;text-align:center;padding:10px;border: solid 1px black;">
                @item.Value%<br />
                 @item.Key
            </div>
       
        }  
        
    }
   </div>
    <br /> <br /> <br />
   <div style="display:block">
       @if(Model != null){
    <img src="data:image/png;base64,@Model.image64" alt="" />
       }
    </div>